{
  "name": "Rpanion-server",
  "version": "0.11.0",
  "private": true,
  "secure": false,
  "dependencies": {
    "app-root-path": "^3.1.0",
    "bcrypt": "^5.1.1",
    "bootstrap": "^5.3.1",
    "compression": "^1.7.4",
    "express": "^5.1.0",
    "express-fileupload": "^1.4.0",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "node-mavlink": "^2.0.5",
    "npm": "^11.3.0",
    "prop-types": "^15.8.1",
    "react": "^19.1.0",
    "react-bootstrap": "^2.8.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.5.2",
    "react-select": "^5.7.4",
    "rsync": "^0.6.1",
    "serialport": "^13.0.0",
    "settings-store": "^1.4.1",
    "socket.io": "^4.8.0",
    "socket.io-client": "^4.7.2",
    "startbootstrap-simple-sidebar": "^6.0.6",
    "systeminformation": "^5.23.8",
    "vite": "^6.3.4"
  },
  "bin": {
    "coveralls": "./bin/coveralls.js"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "testfront": "vitest --run ./src",
    "testback": " mocha --exit ./server/*.test.js ./mavlink/*.test.js",
    "mocha": "_mocha --exit ./server/*.test.js ./mavlink/*.test.js",
    "test-cov": "nyc npm run mocha && nyc report --reporter=text-lcov",
    "test-coveralls": "nyc npm run mocha && nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint .",
    "server": "node-env-run server --exec nodemon | pino-colada",
    "service": "node ./server/index.js",
    "dev": "NODE_ENV=development run-p server start",
    "preview": "vite preview",
    "package": "npm run build && mkdir -p ./additional/etc/Rpanion-server && cp ./config/user.json ./additional/etc/Rpanion-server && node-deb --extra-files additional -- server mavlink build && rm -r ./additional"
  },
  "node_deb": {
    "entrypoints": {
      "daemon": "./server/index.js"
    },
    "init": "systemd",
    "name": "rpanion-server",
    "dependencies": "nodejs (>= 16.0.0)",
    "description": "A node.js based server for companion computers used in Mavlink-based vehicles (ie Ardupilot, PX4). It presents a web-based interface (running on the companion computer), where system settings such as network, telemetry and video streaming can be configured from.",
    "install-strategy": "copy",
    "before-install": "./debian/preinst",
    "after-install": "./debian/postinst",
    "before-remove": "./debian/prerm",
    "after-remove": "./debian/postrm",
    "templates": {
      "systemd-service": "./debian/systemd.service.hbs"
    },
    "package": {
      "includes": [
        "server/**/*",
        "mavlink/**/*",
        "build/**/*"
      ]
    }
  },
  "proxy": "http://localhost:3001",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@vitejs/plugin-react": "^4.3.4",
    "body-parser": "^2.2.0",
    "coveralls-next": "^4.2.1",
    "eslint": "^9.24.0",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.0.0",
    "happy-dom": "^17.4.4",
    "mocha": "^11.1.0",
    "mocha-lcov-reporter": "^1.3.0",
    "node-deb": "^0.10.7",
    "node-env-run": "^4.0.2",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.1.0",
    "pino-colada": "^2.2.2",
    "pino-http": "^10.3.0",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^3.1.1"
  },
  "nyc": {
    "all": true,
    "include": [
      "server/**/*.js",
      "mavlink/mavManager.js"
    ],
    "exclude": [
      "server/**/*.test.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "overrides": {
    "autoprefixer": "10.4.5"
  }
}
