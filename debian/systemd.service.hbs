[Unit]
Description=Rpanion Server
After=network.target

[Service]
Type=simple
User=rpanion
Group=rpanion
ExecStart=/usr/bin/node /usr/share/{{ node_deb.package_name }}/server/index.js
WorkingDirectory=/usr/share/{{ node_deb.package_name }}
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
